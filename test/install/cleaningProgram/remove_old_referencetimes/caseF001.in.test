# Setup environment
export TESTCASE="F001"
export TEST_DESCRIPTION="Deleting old data"
export TEST_PATH=__WDB_BUILDDIR__/test/install/cleaningProgram/remove_old_referencetimes/

# Test Environment
echo $TEST_PATH/testEnvironment.sh
$TEST_PATH/testEnvironment.sh

# Parse command line
case $1 in
    --help) 
    echo "$SCRIPT_USAGE"; exit 0;;
    --version) 
    echo "$0 $SCRIPT_VERSION"; exit 0;;
    --xml)
		XML_OPT="-x";;
    -x)
		XML_OPT="-x";;
esac

# Timing
startTime=`date +%s%N`
# Calculate Test time
TESTTIME=$(date +%FT%R:%S --date "3 days ago")

# Clean out database
$TEST_PATH/tearDown.sh

# Generate Test Data
${TESTWRITE_PATH}/testWrite --dataprovider 'test cleandb' --reftime=${TESTTIME}
if ! $PSQL -Atc "SELECT count(*) FROM test.gridvalue_v WHERE dataprovidername='test cleandb'" | grep -qE "1"
then
	endTime=`date +%s%N`
	totalTime=$(echo "scale = 3; ($endTime-$startTime)/1000000000" | bc -l)
	if test "$XML_OPT" = "-x"; then
    	echo "<testcase name=\"`basename $0` $TEST_DESCRIPTION\" time=\"$totalTime\">\n\t<failure message=\"Data was not inserted for test\">\n\t</failure>\n</testcase>"
	else
    	echo "not ok $1 - `basename $0`\t$TEST_DESCRIPTION (data was not inserted)"
	fi
    $TEST_PATH/tearDown.sh
    exit 1
fi

# Run Cleaner
$PSQL -q <<EOF
\o __WDB_LOGDIR__/$TESTCASE_FILE.tmp
select wci.begin('cleantest', 999, 999, 999);
select cleanupDb();
EOF

# Check Result
# - Expected Result: Data should be deleted
if ! $PSQL -Atc "SELECT count(*) FROM test.gridvalue_v WHERE dataprovidername='test cleandb'" | grep -qE "0"
then
	endTime=`date +%s%N`
	totalTime=$(echo "scale = 3; ($endTime-$startTime)/1000000000" | bc -l)
	if test "$XML_OPT" = "-x"; then
    	echo "<testcase name=\"`basename $0` $TEST_DESCRIPTION\" time=\"$totalTime\">\n\t<failure message=\"Data does not appear to have been deleted\">\n\t</failure>\n</testcase>"
	else
    	echo "not ok $1 - `basename $0`\t$TEST_DESCRIPTION (data was not deleted from WDB)"
	fi
    $TEST_PATH/tearDown.sh
    exit 1
fi

# Clean Up and Exit
$TEST_PATH/tearDown.sh
endTime=`date +%s%N`
totalTime=$(echo "scale = 3; ($endTime-$startTime)/1000000000" | bc -l)
if test "$XML_OPT" = "-x"; then
	echo "<testcase name=\"`basename $0` $TEST_DESCRIPTION\" time=\"$totalTime\">\n</testcase>"
else
	echo "ok $1 - `basename $0`\t$TEST_DESCRIPTION"
fi
